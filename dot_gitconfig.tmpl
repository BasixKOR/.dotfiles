[core]
	excludesfile = ~/.gitexclude
{{- if lookPath "delta" }}
	pager = delta
{{- end }}
	fsmonitor = true
[pull]
	rebase = true
[credential]
	helper =
{{- if eq .chezmoi.os "windows" }}
	helper = manager-core
{{- else if eq .chezmoi.os "darwin" }}
	helper = /usr/local/bin/git-credential-manager
{{- end }}
[init]
	defaultBranch = main
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[gpg]
	program = gpg
[commit]
	gpgsign = true
[rebase]
	autoStash = true
	autoSquash = true
[merge]
	conflictstyle = diff3
	conflictstyle = zdiff3
[diff]
	algorithm = histogram
	colorMoved = default
[interactive]
    diffFilter = delta --color-only
[rerere]
	enabled = true
[push]
	default = current

# Delta
[delta]
    navigate = true  # use n and N to move between diff sections
	theme = Monokai Extended
[includeIf "gitdir:~/work/"]
	path = ~/.gitconfig-work
